{
  "name": "reyes-magos-gr",
  "version": "1.0.0",
  "description": "App for distributing toys",
  "scripts": {
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/main.css --minify",
    "build:js": "esbuild public/js/src/app.ts public/js/sc/admin.ts  --outdir=public/js/dist --bundle --format=esm --tree-shaking=true --minify",
    "build": "npm run build:css && npm run build:js",
    "dev:css": "tailwindcss -i ./public/css/input.css -o ./public/css/main.css --watch",
    "dev:js": "esbuild public/js/src/app.ts public/js/src/admin.ts  --outdir=public/js/dist --bundle --format=esm --tree-shaking=true --sourcemap --watch",
    "dev": "npm run dev:css & npm run dev:js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/interactivelabs/reyes-magos-gr.git"
  },
  "keywords": [
    "htmx",
    "go"
  ],
  "author": "interactivelabsus@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/interactivelabs/reyes-magos-gr/issues"
  },
  "homepage": "https://github.com/interactivelabs/reyes-magos-gr#readme",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "esbuild": "^0.21.5",
    "tailwindcss": "^3.4.4"
  }
}
